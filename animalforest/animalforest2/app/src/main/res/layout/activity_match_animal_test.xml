<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".matchAnimalTest">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                android:src="@drawable/animaltest" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sindinaru"
                android:text="Q1.어떤 동물이 좋아?"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="25dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp">

                <RadioButton
                    android:id="@+id/ans1_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sindinaru"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="10dp"
                    android:text="친절하고 활발한 사람?"
                    android:textColor="#A9A9A9"
                    android:textSize="20dp" />

                <RadioButton
                    android:id="@+id/ans1_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sindinaru"
                    android:text="아니면 좀 정중한 느낌?"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#A9A9A9"
                    android:textSize="20dp" />
            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sindinaru"
                android:layout_marginTop="20dp"
                android:text="Q2.무슨 스타일이 좋아?"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="25dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp">

                <RadioButton
                    android:id="@+id/ans2_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sindinaru"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="10dp"
                    android:text="심플한게 최고지~"
                    android:textColor="#A9A9A9"
                    android:textSize="20dp" />

                <RadioButton
                    android:id="@+id/ans2_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sindinaru"
                    android:text="난 좀 쿨한게 좋더라"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#A9A9A9"
                    android:textSize="20dp" />

                <RadioButton
                    android:id="@+id/ans2_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sindinaru"
