                    android:layout_marginTop="20dp"
                    android:textSize="25dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp" />
            </RadioGroup>

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
